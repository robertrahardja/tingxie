{
  "name": "tingxie-spelling",
  "version": "2.0.0",
  "description": "Mobile-first Chinese spelling practice website built with React + TanStack",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3001 --open",
    "build": "tsc -b && vite build",
    "preview": "vite preview --port 3001",
    "typecheck": "tsc --noEmit",
    "deploy": "npm run build && npx wrangler deploy"
  },
  "keywords": [
    "chinese",
    "spelling",
    "education",
    "mobile",
    "react",
    "tanstack"
  ],
  "author": "",
  "license": "MIT",
